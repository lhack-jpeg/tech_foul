<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Tech Foul</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <link rel='stylesheet' type='text/css' href="/style/match_detail_style.css"/>
  <script type="text/javascript">
    window.onload = function () {
    
      var chart = new CanvasJS.Chart("chartContainer", {
        title: {
          text: "Team ELO Comparison (%)",
          padding: 8,
          margin: 20,
          backgroundColor: "#FFFFE0",
          borderThickness: 1,
          cornerRadius: 5,
          fontWeight: "bold"
        },
        legend: {
		      verticalAlign: "top"
	      },
        axisX: {
          lineThickness: 1,
          tickLength: 0,
          labelFormatter: function(e) {
            return "";
          },
        },
        axisY: {
          includeZero: true,
          lineThickness: 1,
          gridThickness: 1,
          tickLength: 10,
          labelFormatter: function(e) {
            return e.value;
          },
          gridDashType: "shortDash",
          interval: 10,
          labelAngle: 30,
        },
        toolTip: {
          shared: true
        },
        data: [{
          <% team_one.forEach(entry=> { %>
          type: "stackedBar100",
          name: "<%= entry.name %>",
          showInLegend: true,
          bevelEnabled: true,
          color: "#50ca50",
          dataPoints: [
            { y: <%= Math.round((entry.elo_win_pct) * 100)%> }
          ]
          <% }); %>
        }, {
          <% team_two.forEach(entry=> { %>
          type: "stackedBar100",
          name: "<%= entry.name %>",
          showInLegend: true,
          bevelEnabled: true,
          color: "#f75134",
          dataPoints: [
          {y: <%= Math.round((entry.elo_win_pct) * 100)%> }
          ]
          <% }); %>
        }]
      });
      chart.render();
    }
  </script>
</head>


<body class="container">
    <header>
      <div id="header-logo"></div>
      <div class="row"><H2 class="d-flex justify-content-center">Tech Foul</H2></div>
    </header>
    <main class="main-container">
      
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-6 border-right">
              <% team_one.forEach(entry=> { %>
                <h2 class="d-flex justify-content-center">
                  <div class="team_name_top"> 
                    <%= entry.name %> &nbsp;
                  </div>
                <div class="team-icon">
                  <img src="/images/TF_Logo_2.png"/>
                </div>
              </h2>
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>

                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>Team ID</td>
                      <td><%= entry.id %></td>
                    </tr>
                    <tr>
                      <td>ELO</td>
                      <td><%= Math.round((entry.elo_win_pct) * 100) + '%' %></td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <% }); %> 
          </div>
          <div class="col-sm-6 border-left">
            <% team_two.forEach(entry=> { %>
            <h2 class="d-flex justify-content-center">
              <div class="team_name_top"> 
                <%= entry.name %> &nbsp;
              </div>
              <div class="team-icon">
                <img src="/images/TF_Logo_2.png"/>
              </div>
            </h2>
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th>Category</th>
                    <th>Value</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>Team ID</td>
                    <td><%= entry.team_id %></td>
                  </tr>
                  <tr>
                    <td>ELO</td>
                    <td><%= Math.round((entry.elo_win_pct) * 100) + '%' %></td>
                  </tr>
                </tbody>
              </table>
            </div>
            <% }); %>
        </div>
      </div>
      <div class="container-fluid">
        <div>
          <canvas id="eloChart"></canvas>
        </div>
        <script src="/javascript/eloChart.js">
        </script>
      </div>
      <div class="container-fluid">
        <div id="chartContainer" style="height: 370px; width: 100%;"></div>
        <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
      </div>
    </main>

    <footer>
      <%- include('../partials/footer'); %>
    </footer>
</body>

</html>